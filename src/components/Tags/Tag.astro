---
const { path, text } = Astro.props;
---

<div class="tag">
  <a href={path}>{text}</a>
</div>

<style>
  .tag {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.8rem 1.2rem;
    background-color: var(--light-grey);
    border-radius: 10rem;
    flex: 0 0 auto;
    height: min-content;
    position: relative;
    will-change: transform;

    & a {
      font-size: 1.4rem;
      text-decoration: none;
      color: var(--black);
      transform: none;
      width: auto;
      height: auto;
      flex: 0 0 auto;
    }
  }
</style>
